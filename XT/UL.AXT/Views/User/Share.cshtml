
@{
    Layout = null;
}

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>爱虾投</title>
    <meta content="" name="Keywords">
    <meta content="" name="Description">
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1, user-scalable=no">
    <meta content=”yes” name=”apple-mobile-web-app-capable” /> <!--允许全屏模式浏览-->
    <meta content=”black” name=”apple-mobile-web-app-status-bar-style” /><!--iphone中safari顶端的状条的样式-->
    <meta content=”telephone =no” name=”format-detection” /><!--忽略将页面中的数字识别为电话号码-->

    <link href="~/Content/css/Animate.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/Layout.css" rel="stylesheet" type="text/css" />
    <script type="text/javascript" src="~/Scripts/jquery-1.10.2.js"></script>
    <script type="text/javascript" src="~/Scripts/Common/touchwipe.js"></script>
    <script type="text/javascript" src="~/Scripts/Common/common.js"></script>

    <link href="" rel="stylesheet" type="text/css" id="mediaWidth" />
    <script type="text/javascript">
	var sUserAgent = navigator.userAgent;
	if (sUserAgent.indexOf('Android') > -1 || sUserAgent.indexOf('iPhone') > -1 || sUserAgent.indexOf('iPad') > -1 || sUserAgent.indexOf('iPod') > -1 || sUserAgent.indexOf('Symbian') > -1){
		document.write('<link href="css/page320.css" rel="stylesheet" type="text/css"/>');
	}

	$(function() {
	    saveToCookie("UserName", '@ViewBag.UserInfo.UserName');
	    saveToCookie("UserId", '@ViewBag.UserInfo.UserID');
	    saveToCookie("OpenId", '@ViewBag.UserInfo.OpenId');
	    saveToCookie("PhotoPath", '@ViewBag.UserInfo.PhotoPath');
	    saveToCookie("City", '@ViewBag.UserInfo.City');

	    $("#revMoney").click(function() {
	        $.ajax({
	            url: "/User/RevRedEnvelope",
	            type: "POST",
	            async: false,
	            data: {shareUserId:"@ViewBag.ShareUserId",revUserId:"@ViewBag.UserInfo.UserID"},
                success:function(data) {
                    if (data["Succeeded"]) {
                        window.location.href = "/Product/Index";
                    };
                }
	        });
	    });
	});
    </script>
</head>
<body>

    <div class="main0">

        <div class="mainM share_red_bg">
            <img src="~/Content/images/share_img01.png" />
            <div class="share0">
                <div class="share01">
                    <div class="share01L">
                        <img src="@ViewBag.ShareUser.PhotoPath" class="br20 gray3_border1" />
                        <p class="tc">@ViewBag.ShareUser.UserName</p>
                    </div>
                    <div class="share01R">
                        <p class="f14 white_bg br4">一只虾米送给你，免费拿去吧！<img src="~/Content/images/smile.jpg" /></p>
                        <i class="san_4w"></i>
                    </div>
                </div>
                <div class="share02">
                    <a href="#" class="red_bg tc block white f20 margin_t20" id="revMoney">领取红包</a>
                    <h3 class="fn margin">活动规则:</h3>
                    <p>1.虾米自动存入帐户，可直接提现。</p>
                    <p>2.一只虾米可以有一次中奖的机会。</p>
                    <p>3.邀请朋友可获得一只虾米。</p>
                </div>
            </div>
        </div>


    </div>




</body>
</html>
